<div
  class="fixed top-0 left-0 right-0 flex items-center justify-center pt-8 pointer-events-none"
  x-data="{ show: false }"
  x-show="show"
  x-transition.opacity.duration.500ms
  x-init="() => {
    setTimeout(() => { show = true }, 250);
    setTimeout(() => { show = false }, 3000);
  }"
>
  <div class="max-w-xs bg-white shadow-xl border rounded p-3 flex items-center gap-2">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8 flex-none">
      {% if success %}
        <path class="text-green-500" fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm13.36-1.814a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z" clip-rule="evenodd" />
      {% else %}
        <path class="text-red-500" fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zM12 8.25a.75.75 0 01.75.75v3.75a.75.75 0 01-1.5 0V9a.75.75 0 01.75-.75zm0 8.25a.75.75 0 100-1.5.75.75 0 000 1.5z" clip-rule="evenodd" />
      {% endif %}
    </svg>
    <p class="leading-tight">
      {{ message }}
    </p>
  </div>
</div>
